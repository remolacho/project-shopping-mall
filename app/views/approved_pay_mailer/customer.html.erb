<h1>Compra aprobada</h1>

<h3>Datos del usuario</h3>

<div>
  <p>Nombre: <%= @meta_data[:name] %></p>
  <p>Apellido: <%= @meta_data[:last_name] %></p>
  <p>Email: <%= @meta_data[:email] %></p>
  <p>Telefono: <%= @meta_data[:phone] %></p>
</div>

<h3>Datos de la compra</h3>
<div>
  <p>Numero de orden: <%= @meta_data[:number_ticket] %></p>
  <p>Total pagado: <%= @meta_data[:total] %></p>
</div>

<hr>
<h3>Productos:</h3>
<table>
  <thead>
  <tr>
    <td>Nombre</td>
    <td>Precio</td>
    <td>Cantidad</td>
  </tr>
  </thead>
  <tbody>
  <% @meta_data[:products].each do |product| %>
    <tr>
      <td><%= product[:name] %></td>
      <td><%= product[:price] %></td>
      <td><%= product[:quantity] %></td>
    </tr>
  <% end %>
  </tbody>
</table>